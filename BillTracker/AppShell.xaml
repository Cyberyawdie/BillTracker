<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="BillTracker.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:BillTracker.Views"
	xmlns:local="clr-namespace:BillTracker">

	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Main"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:MainPage}"
		Route="MainPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Bill"
		Icon="iconlistdetail.png"
		ContentTemplate="{DataTemplate views:BillsPage}"
		Route="BillsPage" />
    <ShellContent
	Shell.NavBarIsVisible="true"
	Title="Bill History"
	Icon="iconlistdetail.png"
	ContentTemplate="{DataTemplate views:BillHistoryPage}"
	Route="BillHistoryPage" />
    <ShellContent
	Shell.NavBarIsVisible="true"
	Title="Account"
	Icon="iconlistdetail.png"
	ContentTemplate="{DataTemplate views:AccountPage}"
	Route="AccountPage" />

</Shell>
