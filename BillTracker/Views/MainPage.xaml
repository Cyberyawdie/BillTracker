<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="BillTracker.Views.MainPage"
             Title="Bill Tracker App">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Welcome to the Bill Tracker App!" FontSize="Large" HorizontalOptions="Center"/>

        <Label x:Name="TotalAmountDueLabel" FontSize="Medium"/>
        <Label x:Name="OverdueBillsLabel" FontSize="Medium"/>
        <Label x:Name="CurrentBillsLabel" FontSize="Medium"/>
        <Label x:Name="PaidOffBillsLabel" FontSize="Medium"/>
    </VerticalStackLayout>

</ContentPage>
