<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="BillTracker.Views.BillDetailPage">
	<ScrollView>
		<VerticalStackLayout Margin="12">
            <Label Text="Name:" FontSize="Medium"/>
            <Label x:Name="NameLabel" FontSize="Small"/>

            <Label Text="Amount:" FontSize="Medium"/>
            <Label x:Name="AmountLabel" FontSize="Small"/>

            <Label Text="Due Date:" FontSize="Medium"/>
            <Label x:Name="DueDateLabel" FontSize="Small"/>

            <Label Text="Paid:" FontSize="Medium"/>
            <Label x:Name="IsPaidLabel" FontSize="Small"/>

            <Button x:Name="MarkAsPaidButton" Text="Mark as Paid" Clicked="OnMarkAsPaidClicked"/>

        </VerticalStackLayout>
	</ScrollView>
</ContentPage>
