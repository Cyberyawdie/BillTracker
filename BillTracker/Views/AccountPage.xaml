<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BillTracker.Views.AccountPage"
             Title="AccountPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Button Text="Delete Bill History" Clicked="OnDeleteHistoryClicked"/>

        <Label Text="Store Bill Data For:"/>
        <Picker x:Name="DataStorageDurationPicker" SelectedIndexChanged="OnDurationChanged">
            <Picker.Items>
                <x:String>1 Year</x:String>
                <x:String>2 Years</x:String>
                <x:String>3 Years</x:String>
                <!-- Add more options as needed -->
            </Picker.Items>
        </Picker>
    </VerticalStackLayout>
</ContentPage>