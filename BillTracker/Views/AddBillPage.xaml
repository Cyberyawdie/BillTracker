<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BillTracker.Views.AddBillPage"
             Title="AddBillPage">
    <VerticalStackLayout Padding="20">
        <Entry x:Name="NameEntry" Placeholder="Bill Name"  TextChanged="BillNameEntry_TextChanged" />
        <Entry x:Name="AmountEntry" Placeholder="Amount" Keyboard="Numeric" />
        <DatePicker x:Name="DueDatePicker" />
        <Button Text="Add Bill" Clicked="OnAddBillClicked" />
        <CollectionView x:Name="BillNameSuggestions" 
                    IsVisible="False" 
                    SelectionMode="Single"
                    SelectionChanged="BillNameSuggestions_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" 
                       Margin="10"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>